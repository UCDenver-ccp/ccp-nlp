<!-- Settings for a single AnnotationComparator run -->
<AnnotationComparatorSettings>

	<!-- AnnotationGroups define the annotations that will be used in the comparison. Each group          -->
	<!-- is identified by a unique GroupID, and has annotation members defined by their                   -->
	<!-- AnnotationSetID, AnnotatorID, and AnnotationType (which is equivalent to the ClassMention type). -->
	<!-- Multiple AnnotationGroups are permitted. -->


	<!-- gold standard annotations -->
	<AnnotationGroup>
		<GroupID>0</GroupID>
		<AnnotationSetID>0</AnnotationSetID>
		<AnnotatorID>0</AnnotatorID>
		<AnnotationType>DocumentLevel-protein</AnnotationType>
	</AnnotationGroup>

	<!-- normalized protein annotations -->
	<AnnotationGroup>
		<GroupID>1</GroupID>
		<AnnotationSetID>1</AnnotationSetID>
		<AnnotatorID>1</AnnotatorID>
		<!-- see next group for detail on using a regex here -->
		<AnnotationType>DocumentLevel-protein</AnnotationType>
	</AnnotationGroup>

	<!-- ComparisonGroups define how the annotations are compared. Currently, only pairwise comparisons are -->
	<!-- enabled. The ComparisonGroup with GoldStandard set to true is used as the gold standard, and all -->
	<!-- other groups are compared against it.                                                            -->

	<!--  normalized protein group -->
	<ComparisonGroup>
		<ComparisonGroupDescription>Normalized proteins</ComparisonGroupDescription>
		<AnnotationGroupID>1</AnnotationGroupID>
	</ComparisonGroup>
	
	<!-- Gold standard annotations -->
	<ComparisonGroup>
		<GoldStandard>true</GoldStandard>
		<ComparisonGroupDescription>Gold standard</ComparisonGroupDescription>
		<AnnotationGroupID>0</AnnotationGroupID>
	</ComparisonGroup>


</AnnotationComparatorSettings>